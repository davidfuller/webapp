	<p>
	  <%= f.label :name %><br />
	  <%= f.text_field :name %>
	</p>
	<p>
	  <%= f.check_box :hd %>
		<%= f.label :hd, "HD" %>
	</p>
	<p>
	  <%= f.label :press_code %><br />
	  <%= f.text_field :press_code %>
	</p>
	<p>
	  <%= f.label :domain %><br />
	  <%= f.text_field :domain %>
	</p>
	<p>
	  <%= f.label :path %><br />
	  <%= f.text_field :path %>
	</p>
	<p>
	  <%= f.label :playlist_code %><br />
	  <%= f.text_field :playlist_code %>
	</p>
	<p>
	  <%= f.label :bss_name, "BSS Code" %><br />
	  <%= f.text_field :bss_name %>
	</p>
	<p>
	  <%= f.label :language_id %><br />
	  <%= f.collection_select (:language_id, @languages, :id, :name)   %>
	</p>
	<p>
	  <%= f.label :prefix, "Spreadsheet Prefix" %><br />
	  <%= f.text_field :prefix %>
	</p>
	<p>
	  <%= f.label :logo_filename, "Logo filename" %><br />
	  <%= f.text_field :logo_filename %>
	</p>
	
	
	<p>
		<%= f.check_box :circle_logo %>
		<%= f.label :circle_logo, "Has circle logo" %><br />
